  "title" : "Breakout",
  "version" : "1.0.0",
  "traits" : {
    "Disappearable" : {
      "parameters" : [],
      "code" : [
        { "set": ["hits left", 1] },
        {
          "on_event": {
            "name": "collision",
            "parameters": ["other_sprite"],
            "code": [
              { "set": ["hits left", { "-": [{ "get": "hits left" }, 1] }] },
              {
                "if": {
                  "test": { "==": [{ "get": "hits left" }, 0] },
                  "true": [
                    { "call": { "method": "remove" } }
                  ]
                }
              },
              { "trigger_event": { "name": "score", "parameters": {} } }
            ]
          }
        }
      ]
    },
    "Draggable" : {
      "code" : [
        {
          "set" : [
            "offset_x",
            0
          ]
        },
        {
          "set" : [
            "offset_y",
            0
          ]
        },
        {
          "on_event" : {
            "name" : "touch_began",
            "code" : [
              {
                "set" : [
                  "offset_x",
                  {
                    "-" : [
                      {
                        "get" : "touch_x"
                      },
                      {
                        "get" : "x"
                      }
                    ]
                  }
                ]
              },
              {
                "set" : [
                  "offset_y",
                  {
                    "-" : [
                      {
                        "get" : "touch_y"
                      },
                      {
                        "get" : "y"
                      }
                    ]
                  }
                ]
              }
            ],
            "parameters" : [
              "touch_x",
              "touch_y"
            ]
          }
        },
        {
          "on_event" : {
            "name" : "touch_moved",
            "code" : [
              {
                "if" : {
                  "test" : {
                    "==" : [
                      {
                        "get" : "horizontal"
                      },
                      true
                    ]
                  },
                  "true" : [
                    {
                      "set" : [
                        "x",
                        {
                          "-" : [
                            {
                              "get" : "touch_x"
                            },
                            {
                              "get" : "offset_x"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              },
              {
                "if" : {
                  "test" : {
                    "==" : [
                      {
                        "get" : "vertical"
                      },
                      true
                    ]
                  },
                  "true" : [
                    {
                      "set" : [
                        "y",
                        {
                          "-" : [
                            {
                              "get" : "touch_y"
                            },
                            {
                              "get" : "offset_y"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              }
            ],
            "parameters" : [
              "touch_x",
              "touch_y"
            ]
          }
        }
      ],
      "parameters" : {
        "vertical" : true,
        "horizontal" : true
      }
    }
  },
