{
  "traits": [
    {
      "id": "Draggable",
      "parameters": {
        "horizontal": true,
        "vertical":   true
      },
      "code": [
        {
          "on_event": {
            "name": "touch_moved",
            "parameters": ["touch_x", "touch_y"],
            "code": [
              {
                "if": {
                  "test": { "==": [{ "get": "horizontal"}, true] },
                  "true": [
                    { "set": ["x", { "get": "touch_x" }] }
                  ]
                }
              },
              {
                "if": {
                  "test": { "==": [{ "get": "vertical"}, true] },
                  "true": [
                    { "set": ["y", { "get": "touch_y" }] }
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  ],
  "objects": [
    {
      "id": "paddle1",
      "traits": [
        {
          "id": "Draggable",
          "parameters": {
             "vertical": false
          }
        }
      ],
      "properties": { 
        "x": 40,
        "y": 30,
        "width": 100,
        "height": 20
      },
      "code": []
    },
    {
      "id": "paddle2",
      "traits": [
        {
          "id": "Draggable",
          "parameters": {
             "vertical": false
          }
        }
      ],
      "properties": { 
        "x": 200,
        "y": 520,
        "width": 100,
        "height": 20
      },
      "code": []
    },
    {
      "id": "ball",
      "traits": [],
      "properties": { 
        "x": 160,
        "y": 240,
        "width": 30,
        "height": 30,
        "bouncy": true
      },
      "code": [
        {
          "on_event": {
            "name": "start",
            "parameters": [],
            "code": [
              { "set": ["speed", 100] },
              {
                "call": {
                  "method": "move",
                  "parameters": ["up right", { "get": "speed" }]
                }
              }
            ]
          }
        },
        {
          "on_event": {
            "name": "collision",
            "parameters": ["other_sprite"],
            "code": [
              {
                "if": {
                  "test": { 
                    "or": [
                      { "==": [{ "get": "other_sprite" }, "paddle1"] },
                      { "==": [{ "get": "other_sprite" }, "paddle2"] }
                    ]
                  },
                  "true": [
                    { "set": ["speed", { "+": [{ "get": "speed" }, 2] }] }
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
