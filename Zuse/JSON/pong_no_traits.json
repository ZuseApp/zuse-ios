{
  "objects": [
    {
      "id": "paddle1",
      "traits": {},
      "properties": {
        "x": 10,
        "y": 10,
        "width": 50,
        "height": 20
      },
      "code": [
        { "set": ["horizontal", true] },
        { "set": ["vertical",   false] },
        {
          "on_event": {
            "name": "touch_moved",
            "parameters": ["touch_x", "touch_y"],
            "code": [
              {
                "if": {
                  "test": { "==": [{ "get": "horizontal"}, true] },
                  "true": [
                    { "set": ["x", { "get": "touch_x" }] }
                  ]
                }
              },
              {
                "if": {
                  "test": { "==": [{ "get": "vertical"}, true] },
                  "true": [
                    { "set": ["y", { "get": "touch_y" }] }
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  ]
}